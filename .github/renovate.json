{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^\\.github\\/workflows\\/docker\\.yml$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-.]+?) depName=(?<depName>[^\\s]+?)(?: (?:lookupName|packageName)=(?<packageName>[^\\s]+?))?(?: versioning=(?<versioning>[^\\s]+?))?(?: extractVersion=(?<extractVersion>[^\\s]+?))?\\s+ALPINE_IMAGE\\s*:\\s*[\"']?alpine:(?<currentValue>.+?)@(?<currentDigest>sha256:[a-f0-9]+)[\"']?\\s"
      ]
    }
  ],
  "extends": [
    "config:best-practices",
    ":maintainLockFilesMonthly",
    ":separateMajorReleases",
    ":separateMultipleMajorReleases",
    ":separatePatchReleases",
    "regexManagers:dockerfileVersions",
    "regexManagers:githubActionsVersions",
    "schedule:earlyMondays"
  ],
  "ignoreTests": false,
  "pre-commit": {
    "enabled": true
  },
  "rangeStrategy": "pin",
  "timezone": "Asia/Tokyo"
}
